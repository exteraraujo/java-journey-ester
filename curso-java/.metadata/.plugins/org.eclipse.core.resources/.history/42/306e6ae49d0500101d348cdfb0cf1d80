package fundamentos;

public class AtividadeSemScanner {

	public static void main(String[] args) {
		double fahrenheit = 70; // Valor definido manualmente
		final double fator = 5/9.0; // Fator fixo da fórmula
		final double ajuste = 32; // Ajuste fixo da fórmula
		
		double celsius = (fahrenheit - ajuste) * fator;
		
		System.out.println("A temperatura em celsius é: " + celsius + "°C");

	}
}
